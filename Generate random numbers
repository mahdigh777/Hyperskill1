import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int n = scanner.nextInt(); // Number of random numbers
        int a = scanner.nextInt(); // Lower bound
        int b = scanner.nextInt(); // Upper bound

        Random random = new Random(a + b); // Set the seed as a + b
        int sum = 0;

        for (int i = 0; i < n; i++) {
            int randomNumber = random.nextInt(b - a + 1) + a; // Generate a random number in [a, b]
            sum += randomNumber;
        }

        System.out.println(sum);
    }
}
